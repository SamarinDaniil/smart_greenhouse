{
    "listeners": [
        {
            "address": "0.0.0.0",
            "port": 8080,
            "https": false
        }
    ],
    "app": {
        "threads_num": 2,
        "max_connections": 1000,
        "max_connections_per_ip": 1000,
        "client_max_body_size": "10M",
        "log": {
            "log_path": "./logs",
            "logfile_base_name": "drogon_rest_api",
            "log_level": "DEBUG"
        },
        "run_as_daemon": false,
        "use_sendfile": false,
        "use_gzip": true,
        "static_files_cache_time": -1,
        "enable_server_header": false,
        "enable_date_header": false
    },
    "plugins": [
        {
            "name": "api::DbPlugin",
            "dependencies": [],
            "config": {
                "database": {
                    "_comment": "Уже создана! Singletone"
                }
            }
        },
        {
            "name": "api::JwtPlugin",
            "dependencies": [],
            "config": {
                "algorithm": "HS256",
                "secret": "supersecretkey_32chars_long_123456",
                "token_lifetime_minutes": 30,
                "payload": {
                    "user_type": [
                        "admin",
                        "observer"
                    ]
                },
                "claims": {
                    "iss": "greenhouse_server"
                }
            }
        }
    ]
}