FILE_PATTERNS          = *.cpp *.hpp       # Форматы файлов

# Настройки генерации диаграмм
GENERATE_HTML          = YES
HTML_OUTPUT            = html
GENERATE_HTML_GRAPH    = YES
GENERATE_UML_DIAGRAMS  = YES               # Генерация UML-диаграмм
